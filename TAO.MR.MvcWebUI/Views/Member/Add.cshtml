</head>
<body class="bg-light">

    <div class="container">
        <main>
            <div class="py-5 text-center">
                <img class="d-block mx-auto mb-4" src="/docs/5.2/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
                <h2>Register Form</h2>
                <p class="lead"> Please enter your information. </p>
            </div>

            <div class="row g-5">
                <div class="col-md-12 col-lg-8">
                    <h4 class="mb-3">Personal Informations</h4>
                    @using (Html.BeginForm())
                    {


                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label for="firstName" class="form-label">First name</label>
                                <input type="text" class="form-control" id="firstName" name="member.FirstName" placeholder="" value="">

                            </div>

                            <div class="col-sm-6">
                                <label for="lastName" class="form-label">Last name</label>
                                <input type="text" class="form-control" id="lastName" name="member.LastName" placeholder="" value="">

                            </div>

                            <div class="col-12">
                                <label for="nationalIdentity" class="form-label">Nationly Identity</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"></span>
                                    <input type="text" class="form-control" id="nationalIdentity" name="member.NationalIdentity" placeholder="National Identity">

                                </div>
                            </div>

                            <div class="col-12">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="member.Email" placeholder="you@example.com">
                            </div>

                            <div class="col-12">
                                <label for="dateofBirth" class="form-label">Date Of Birth</label>
                                <input type="text" class="form-control" id="dateOfBirth" name="member.DateOfBirth" placeholder="06/06/1978">
                            </div>


                        </div>

                        <hr class="my-4">



                        <button class="w-100 btn btn-primary btn-lg" type="submit">Register</button>
                    }
                </div>
            </div>
        </main>

        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2022 Tunahan Ali Ozturk</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>



</body>
